# CatchMyVibe Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# DATABASE
# =============================================================================
# Local PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/catchmyvibe

# Or use Supabase (recommended for production)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key
# SUPABASE_SERVICE_KEY=your-service-key

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# CLOUD STORAGE
# =============================================================================
# Google Drive (recommended)
# Download credentials from Google Cloud Console
GOOGLE_DRIVE_CREDENTIALS_FILE=./credentials/google-drive.json
GOOGLE_DRIVE_FOLDER_ID=your-music-folder-id

# Backblaze B2 (alternative/backup)
# B2_APPLICATION_KEY_ID=your-key-id
# B2_APPLICATION_KEY=your-app-key
# B2_BUCKET_NAME=your-bucket-name

# AWS S3 (alternative)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# =============================================================================
# STREAMING SERVICES (for metadata enrichment)
# =============================================================================
# Spotify
# Create app at https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/auth/spotify/callback

# Tidal
# TIDAL_CLIENT_ID=your-tidal-client-id
# TIDAL_CLIENT_SECRET=your-tidal-client-secret

# =============================================================================
# ANALYSIS
# =============================================================================
# Temporary directory for audio processing
ANALYSIS_TEMP_DIR=/tmp/catchmyvibe_analysis

# Maximum concurrent analysis jobs
MAX_CONCURRENT_ANALYSIS=4

# Timeout for analysis jobs (seconds)
ANALYSIS_TIMEOUT_SECONDS=300

# =============================================================================
# API SETTINGS
# =============================================================================
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# =============================================================================
# AUTH (for future use)
# =============================================================================
# JWT_SECRET=your-super-secret-key-change-in-production
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
